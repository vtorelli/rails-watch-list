<h1><%= @list.name %></h1>

<% @list.movies.each do |movie| %>
  <%= movie.title %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, status: :see_other}%>
<% end %>

<%= link_to "delete list", list_path(@list) %>
<%= link_to "back to home", lists_path %>
<%= link_to "add a movie", new_list_bookmark_path(@list) %>
